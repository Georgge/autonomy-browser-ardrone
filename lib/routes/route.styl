.return
    width 50px
    height 50px
    background #ff4b4b
    display flex
    justify-content center
    align-items center
    border-radius 50%
    color #fff
    font-weight bold
    cursor pointer
    box-shadow 1px 2px 10px #a9a9a9
    position absolute
    top 0
    left 0
    margin 10px 0px 0px 70px
    z-index 100


.route
    background #ededed
    width 100vw
    position absolute
    height 100vh
    top 0
    left 100vw
    right 0
    transition left 1s, right 1s
    display flex
    justify-content space-around
    align-items center
    flex-wrap wrap
    min-width 470px

    &-button
        position absolute
        width 60px
        height 60px
        background rgba(#fff, 0.8)
        background-size cover
        left -60px
        border-top solid 2px #fff
        border-bottom solid 2px #fff
        border-left solid 2px #fff
        border-radius 5px 0px 0px 5px
        box-sizing border-box
        margin-top 5px
        display flex
        justify-content center
        align-items center
        box-shadow -3px 2px 10px #a9a9a9
        cursor pointer

.map
    width 75vw
    height 100vh
    background #fff
    @media screen and (max-width: 890px)
        width 70vw
    @media screen and (max-width: 670px)
        width 60vw

.map-button
    position absolute
    left 0
    width 75vw
    bottom 20px
    height 100px
    display flex
    justify-content space-around
    @media screen and (max-width: 890px)
        width 70vw
    @media screen and (max-width: 670px)
        width 60vw


    &-item
        width 80px
        height 80px
        border-radius 50%
        box-shadow 1px 1px 15px #0d0d0d
        display flex
        justify-content center
        align-items center
        cursor pointer

        > img
            width 50px

.takeoff
    background-color #8ff836

.land
    background-color #f87936

.fly
    background-color #3663f8

.stop
    background-color #ff4f4f
    > img
        margin-left -5px

.map-panel
    width 25vw
    height 100vh
    background #232323
    box-shadow -2px 2px 10px #3c3c3c
    display flex
    justify-content center
    flex-wrap wrap
    overflow-y scroll
    align-content space-between
    @media screen and (max-width: 890px)
        width 30vw
    @media screen and (max-width: 670px)
        width 40vw

    &-title
        width 90%
        text-align center
        color #eee
        margin-top 30px
        font-size 1.3rem
        border-bottom solid 2px #eee
        height 40px

        @media screen and (max-width: 1200px)
            font-size 1rem
        @media screen and (max-width: 700px)
            font-size 0.8rem
        @media screen and (max-width: 670px)
            font-size 1rem

.manual-position
    width 90%
    height 180px
    border solid 1.5px #000
    box-shadow -1px 2px 10px #191919
    display flex
    align-items center
    flex-wrap wrap
    justify-content center
    color $letter-blueColor
    font-size 1rem
    font-weight normal
    position relative
    margin-top 35px
    font-size 0.8rem
    > div
        width 100%
        margin 10px 20px
        display flex
        justify-content space-between
        flex-wrap wrap
        @media screen and (max-width: 730px)
            margin 5px
            justify-content center
        > input
            text-align right
            height 12px
            font-size 0.8rem
            border-radius 3px
            color #62ddb2
    &::before
        content "Ir a un punto del mapa"
        position absolute
        top -13px
        left 10px
        font-weight normal
        color $letter-whiteColor
    > span::before
        content "Establecer punto"
        @media screen and (max-width: 650px)
            content "Ir"

