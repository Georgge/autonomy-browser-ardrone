.return-video
    margin 0
    box-shadow 0 0 0

.video
    width 100vw
    position absolute
    height 100vh
    background $element-darkColor
    background-size cover
    background-position center
    top 0
    left 100vw
    right 0
    transition left 1s, right 1s
    display flex
    justify-content space-around
    align-items center
    flex-wrap wrap
    &-button
        position absolute
        width 60px
        height 60px
        background rgba(#fff, 0.8)
        background-size cover
        left -60px
        top 100px
        border-top solid 2px #fff
        border-bottom solid 2px #fff
        border-left solid 2px #fff
        border-radius 5px 0px 0px 5px
        box-sizing border-box
        margin-top 5px
        display flex
        justify-content center
        align-items center
        box-shadow -3px 2px 10px #a9a9a9
        cursor pointer
    &-margin
        top 200px

.video-menu
    height 50px
    background $element-darkColor
    position absolute
    top 0
    left 0
    right 0
    display flex
    justify-content space-around
    padding-left 50px
    align-items center
    >div
        color $letter-blueColor

.video-container
    width 100vw
    height 90vh
    display flex
    justify-content space-around
    flex-wrap wrap
    align-items flex-start
    position absolute
    top 70px
    left 0
    right 0
    overflow-y scroll

.video-list
    width 100vw
    display flex
    justify-content space-around
    flex-wrap wrap
    align-items flex-start
    > video
        width 300px
        border 1px solid #ff7272
        margin-bottom 15px

