.controls
    width 95vw
    height 150px
    display flex
    justify-content space-between
    align-items center
    @media screen and (max-width: 600px)
        display: none


.control-left
    width 300px
    height 150px
    display flex
    justify-content center
    flex-wrap wrap-reverse


.control-rigth
    width 300px
    height 150px
    display flex
    justify-content center
    flex-wrap wrap-reverse


.control-button
    width 70px
    height 50px
    background rgba(255, 255, 255, 0.4)
    margin 10px
    border-radius 5px
    border solid 1px #fff
    -webkit-box-shadow 1px 5px 10px 0px rgba(82,82,82,1)
    -moz-box-shadow 1px 5px 10px 0px rgba(82,82,82,1)
    box-shadow 1px 5px 10px 0px rgba(82,82,82,1)


.keypress-rigth
    width 70px
    height 50px
    background rgba(124, 196, 25, 0.72)
    margin 10px
    border-radius 5px
    border solid 1px #43ff2a


.keypress-left
    width 70px
    height 50px
    background rgba(196, 183, 25, 0.72)
    margin 10px
    border-radius 5px
    border solid 1px #efff2a

.control-panel
    width 600px
    height 190px
    border solid 2px #868686
    border-radius 4px
    box-shadow 1px 1px 10px #313131
    display flex
    justify-content space-around
    flex-wrap wrap
    align-items center

    &-item
        width 60px
        height 60px
        border-radius 50%
        margin 10px 40px
        display flex
        justify-content center
        align-items center
        box-shadow 1px 2px 10px #6a6a6a
        cursor pointer
        >img
            width 40px

