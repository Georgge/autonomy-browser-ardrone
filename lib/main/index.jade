doctype html
html(lang="es")
    head
        title Hibou
        meta(charset="UTF-8")
        meta(name="viewport" ,content="width=device-width, user-scalable=no")

        link(rel="stylesheet", href="css/style.css", type="text/css")
        link(href='http://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
        //script(type='text/javascript', src='/dronestream/vendor/broadway/canvas.js')
        link( rel="stylesheet", href="css/leaflet.css")

    body
        main(class="container")
            div(id="controls-help", class="controls-help")
                img(src="image/control.png", alt="Controles")

            include ../help/help

            div(id="alerts", class="alerts")
            include ../routes/index
            include ../videos/video-list
            include ../configuration/conf

            div(class="canvas-container")
                include altitude
                div(id="battery", class="battery")
                    | Energia:
                    span(id="bat")
                    |  %

                div(class="drone-ubication")
                    | Latitude:
                    div(class="drone-ubication-item", id="drone-latitude")
                    | Longitud:
                    div(class="drone-ubication-item", id="drone-longitude")
                    | Velocidad:
                    div(class="drone-ubication-item", id="drone-speed")

                canvas(id="image-drone", class="canvas-video")

            div(class="options")
                div(class="options-item") Intensidad de wifi:
                    div(id="wifi")
                div(class="options-item") GPS conectado:
                    div(id="gpsPlug")
                div(class="options-item") Satelites conectados:
                    div(id="gpsSatellite")
                div(class="options-item") Velocidad X/Y/Z (Servos):
                    div(id="velocity")
                div(class="options-item") Velocidad del viento:
                    div(id="windSpeed")
                div(class="options-item") Angulo del viento:
                    div(id="windAngle")
                div(class="options-item") Probelmas en motores:
                    div(id="motorProblem")
                div(class="options-item") USB conectada:
                    div(id="usb-ready")
                div(class="options-item") Aterrizaje de emergencia:
                    div(id="emergency-landing")
                div(class="options-item") Estado del vuelo:
                    div(id="fly-state")



            include ../buttons/index

        script( src="js/socket.io-1.3.5.js")
        script( src="http://maps.google.com/maps/api/js?v=3.2&sensor=false")
        script( src="js/maps/leaflet.js")
        script( src="js/maps/gamepad-client.js")
        script( src="js/maps/gamepad-calibration.js")
        script( src="js/maps/leaflet-google.js")
        script( src="js/jquery-2.1.4.min.js")
        script( src="js/keylisten.js", type="text/javascript")
        script( src="js/events.js", type="text/javascript")
        script( src="js/video-request.js", type="text/javascript")
        script( src="js/maps/load.js")
